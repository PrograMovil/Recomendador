<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutExpandedPro"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="7dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="0dp"
        android:layout_weight="7.44"
        >
        <RelativeLayout
            android:id="@+id/layoutExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Nombre: " />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_alignStart="@+id/textViewNombre"
            android:text="nombre"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewArtista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/textViewNombre"
            android:text="Artista: " />

        <TextView
            android:id="@+id/artista"
            android:layout_width="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewArtista"
            android:layout_below="@+id/textViewNombre"
            android:text="artista"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewAlbum"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewArtista"
            android:layout_marginStart="12dp"

            android:text="Album: " />

        <TextView
            android:id="@+id/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_alignStart="@+id/textViewAlbum"
            android:layout_below="@+id/textViewArtista"
            android:text="album"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewGenero"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewAlbum"
            android:layout_marginStart="12dp"

            android:text="Genero: " />

        <TextView
            android:id="@+id/genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_alignStart="@+id/textViewAlbum"
            android:layout_below="@+id/textViewAlbum"
            android:text="genero"
            android:textAppearance="?attr/textAppearanceListItem" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


